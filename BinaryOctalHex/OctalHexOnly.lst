                        ; PROGRAM TO DISPLAY OCTAL AND HEX
                        
                        ; THIS PARTICULAR VERSION DOES NOT USE AN I/O MODULE
                        ; I DISABLED THE OUTPUT FOR AN I/O MODULE IN THIS LINE
                        ;     OUT (80H),A
                        ; I'V ALSO COMMENTED OUT THESE TWO LINES AFTER THE DELAY LOOP:
                        ;    IN A,(81H)          ; LOAD 8 WITH VALUE OF SWITCHES
                        ;    LD (DELAYTIME+1),A
                        
                        
                        ; THIS PROGRAM IS FOR THE SOUTHERN CROSS
                        ; Z80 COMPUTER
                        
                        ; V 1.0 -- USING AZ80 ASSEMBLER
                        ; -- RICKY BRYCE
                        
                        ; BE SURE TO CROSSOVER TX/RX IN CABLE
                        
   2000                     ORG 2000H       ; PROGRAM STARTS AT 2000H
                            
                        ; DEFINE PRESETS FOR DELAY LOOP
                        ; TO INCREMENT EVERY SECOND (TRIAL AND ERROR)
                        
                        ; ** BEGIN HEAD **
                        ; THESE SETTINGS WILL COARSE ADJUST CLOCK CALIBRATION
                        ; FOR FINER TUNING USE NOPS IN DELAY LOOP
   0001                 DELAYLOW: EQU 01H    ; DELAY LOW BYTE START 51H
   0001                 DELAYHIGH: EQU 01; 	; DELAY HIGH BYTE START 01H
                        
                        ; ** END HEAD **
                        
                        
                        ; ** BEGIN INITIALIZE **    
   2000                 INIT: ; INITIALIZE REGISTERS AND MEMORY
   2000   3e 00             LD A,0  ; ZERO ACCUMULATOR
   2002   dd 21 03 22       LD IX,OCTAL     ; LOAD IX WITH OCTAL MEMORY LOCATION
   2006   dd 77 00          LD (IX+0),A     ; CLEAR LOW OCTAL BYTE
   2009   dd 77 01          LD (IX+1),A     ; CLEAR HIGH OCTAL BYTE
   200c   32 80 00          LD (80H),A      ; WRITE 0 TO THE DISPLAY
   200f   32 02 22          LD (COUNTER),A  ; START COUNTER AT ZERO
   2012   dd 21 00 22       LD IX,DELAYTIME ; LOAD IX WITH DELAY TIME MEMORY LOCATION
   2016   dd 36 00 01       LD (IX+0),DELAYLOW  ; HIGH BYTE DELAY LOOP
   201a   dd 36 01 01       LD (IX+1),DELAYHIGH ; LOW BYTE DELAY LOOP
   201e   0e 04             LD C,CLRBUF         ; CLEAR THE DISPLAY BUFFER BEFORE WE BEGIN
   2020   f7                RST SYSTEM          ; SYSTEM CALL
                        
                            
                           
                        ; ** BEGIN MAIN ROUTINE **
   2021                 BEGIN:
                        
   2021   cd 71 20          CALL DELAY          ; START BY RUNNING A DELAY LOOP
   2024   3a 02 22          LD A,(COUNTER)      ; LOAD A WITH THE COUNTER TO DISPLAY
   2027   3c                INC A               ; INCREMENT A
   2028   32 02 22          LD (COUNTER),A      ; THEN STORE A TO THE COUNTER MEMORY LOCATION
                            ;OUT (80H),A         ; SEND THE COUNTER TO THE LEDS
                        
                            ; CONVERT OCTAL
   202b                 FIRSTCHAR:              ; IF THE FIRST CHARACTER IS 8, WE NEED TO ADD 8
   202b   2a 03 22          LD HL,(OCTAL)       ; LOAD HL WITH THE LAST OCTAL VALUE
   202e   23                INC HL              ; INCREMENT THIS VALUE
   202f   22 03 22          LD (OCTAL),HL       ; THEN STORE HL BACK TO OCTAL MEMORY LOCATION
   2032   7d                LD A,L              ; LOAD THE LOW BYTE TO A
   2033   e6 0f             AND 0FH             ; MASK OUT THE UPPER NYBBLE
   2035   fe 08             CP 08H              ; COMPARE TO 8
   2037   20 29             JR NZ,CONT          ; IF NOT 8, THEN WE ARE OK... CONTINUE
   2039   2a 03 22          LD HL,(OCTAL)       ; IF 8, THEN RELOAD OCTAL MEMORY LOCATION TO HL
   203c   7d                LD A,L              ; TRANSFER L TO A
   203d   c6 08             ADD A,08H           ; ADD 8H
   203f   6f                LD L,A              ; THEN STORE BACK TO L
   2040   22 03 22          LD (OCTAL),HL       ; NOW STORE HL BACK TO THE OCTAL MEMORY LOCATION
   2043                 SECCHAR:                ; NEXT, DEAL WITH THE UPPER NYBBLE
   2043   2a 03 22          LD HL,(OCTAL)       ; LOAD THE VALUE OF OCTAL TO HL
   2046   7d                LD A,L              ; LOAD L TO A
   2047   e6 f0             AND 0F0H            ; MASK OUT THE LOWER NYBBLE
   2049   fe 80             CP 80H              ; SEE IF WE'VE REACHED 80H
   204b   20 15             JR NZ,CONT          ; IF NOT THEN CONTINUE
   204d   2e 00             LD L,00H            ; BUT IF SO, LOAD L WITH 00H
   204f   24                INC H               ; THEN INCREMENT H
   2050   22 03 22          LD (OCTAL),HL       ; STORE THE VALUE OF HL BACK TO OCTAL
   2053                 THIRCHAR:               ; NEXT, DEAL WITH THE HIGH BYTE, SINCE WE CAN GO TO 377
   2053   2a 03 22          LD HL,(OCTAL)       ; LOAD HL WITH OCTAL
   2056   7c                LD A,H              ; TRANSFER H TO A
   2057   fe 04             CP 04H              ; IF IT'S 4, THEN IT'S TOO HIGH
   2059   c2 62 20          JP NZ,CONT          ; IF NOT THEN WE ARE OK TO CONTINUE
   205c   3e 00             LD A,00H            ; IF VALUE WAS 4, LOAD 00H TO A
   205e   67                LD H,A              ; THEN SET H TO ZERO
   205f   22 03 22          LD (OCTAL),HL       ; HL IS THE NEW OCTAL NUMBER, STORE THIS VALUE TO OCTAL
   2062                 CONT:
   2062   0e 02             LD C,DISADD         ; FUNCTION CODE TO ADD VALUE TO DISPLAY
   2064   2a 03 22          LD HL,(OCTAL)       ; LOAD HL WITH OCTAL AS REQUIRED BY DISADD
   2067   f7                RST SYSTEM          ; SYSTEM CALL
   2068   3a 02 22          LD A,(COUNTER)      ; LOAD A WITH THE COUNTER
   206b   0e 03             LD C,DISBYT         ; THEN PERFORM A FUNCTION CALL TO DISPLAY THE COUNTER
   206d   f7                RST SYSTEM          ; SYSTEM CALL TO DISPLAY RIGHTMOST DIGITS
   206e   c3 21 20          JP BEGIN            ; START OVER
                            
                        ; ** END MAIN ROUTINE **
                        
                        
                        ; ** BEGIN DELAY ROUTINE **
   2071                 DELAY:
   2071   ed 4b 00 22       LD BC,(DELAYTIME)   ; LOAD BC WITH DELAYTIME
                        
   2075                 FINEDELAY:
   2075   c5                PUSH BC             ; PUSH BC TO STACK (BACKUP)
   2076   0e 05             LD C,SCAND          ; FUNCTION CODE TO SCAN DISPLAY
   2078   f7                RST SYSTEM          ; CALL THE SYSTEM
   2079   c1                POP BC              ; POP BC FROM STACK (RESTORE)
   207a   0b                DEC BC              ; DECREMENT BC
   207b   79                LD A,C              ; LOAD A TO C
   207c   b0                OR B                ; SEE IF WE'VE REACHED ZERO YET
   207d   c2 75 20          JP NZ,FINEDELAY     ; IF NOT, THEN CONTINUE LOOP
                        
                            ; COMMENT OUT THESE TO INSTRUCTIONS IF YOU DO NOT HAVE
                            ; AN I/O MODULE
                            ;IN A,(81H)          ; LOAD 8 WITH VALUE OF SWITCHES
                            ;LD (DELAYTIME+1),A   ; STORE THIS TO HIGH BYTE OF DELAY
                                                    ; THIS WILL SLOW THE LOOP
                        
                        
   2080   c9                RET                     ; RETURN TO MAIN
                        
                        ; ** END DELAY ROUTINE **
                        
                        
                        
                        
                        ; ** BEGIN FOOTER (DEFINE BYTES (DB)) **
   2200                     ORG 2200H		; AVOID CROSSING PAGE BOUNDARY
                            
                        ; ** BEGIN DATA TABLES (ARRAYS) **
   2200                 DELAYTIME: 		; FOR DELAY LOOPS
   2200   00 00             DB 00H,00H 	; THESE WILL BE OVERWRITTEN WITH
                        				;CONSTANTS DEFINED IN HEADER
                        				
   2202                 COUNTER:        ; VALUE TO BE DISPLAYED ON LEDS AND RIGHTMOST 2 DIGITS
   2202   00                DB 00H
                        
   2203                 OCTAL:          ; VALUE TO BE DISPLAYED ON LEFTMOST 4 DIGITS
   2203   00 00             DB 00H,00H
                        				
                        				
                        				
                        ; ** END DATA TABLES (ARRAYS) **  
                        
                        ; ** END FOOTER (DEFINE BYTES (DB)) **
                        
